<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:text="TextView Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTxt"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:text="TextView RoomNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roomNumTxt"
        android:textColor="#000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBaseline="@+id/timeTxt"
        android:layout_alignBottom="@+id/timeTxt"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeTxt"
        android:textColor="#000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/remindChk"
        android:layout_toEndOf="@+id/roomNumTxt" />

    <CheckBox
        android:text="@string/set_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remindChk"
        android:textColor="#000"
        android:buttonTint="#000"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/titleTxt"
        android:layout_alignParentEnd="true" />

</RelativeLayout>